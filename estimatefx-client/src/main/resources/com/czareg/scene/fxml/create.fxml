<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity"
      spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.czareg.controller.CreateController">
   <padding>
      <Insets bottom="20.0" left="40.0" right="40.0" top="20.0"/>
      <Insets bottom="20.0" left="40.0" right="40.0" top="20.0"/>
   </padding>
   <children>
      <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="5.0" VBox.vgrow="ALWAYS">
         <children>
            <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="I would like to:"
                   VBox.vgrow="ALWAYS"/>
            <HBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="10.0"
                  VBox.vgrow="ALWAYS">
               <children>
                  <RadioButton contentDisplay="CENTER" maxHeight="1.7976931348623157E308"
                               maxWidth="1.7976931348623157E308" mnemonicParsing="false" selected="true"
                               text="Create Session" HBox.hgrow="ALWAYS">
                     <toggleGroup>
                        <ToggleGroup fx:id="toggleGroup"/>
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton contentDisplay="CENTER" maxHeight="1.7976931348623157E308"
                               maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                               onAction="#handleJoinSessionButtonClicked" text="Join Session" toggleGroup="$toggleGroup"
                               HBox.hgrow="ALWAYS"/>
               </children>
            </HBox>
         </children>
      </VBox>
      <Separator prefWidth="200.0" VBox.vgrow="ALWAYS">
         <VBox.margin>
            <Insets/>
         </VBox.margin>
      </Separator>
      <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="5.0" VBox.vgrow="ALWAYS">
         <children>
            <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Enter your name:"
                   VBox.vgrow="ALWAYS"/>
            <TextField fx:id="nameTextField" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                       promptText="Name" VBox.vgrow="ALWAYS"/>
         </children>
      </VBox>
      <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="5.0" VBox.vgrow="ALWAYS">
         <children>
            <CheckBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                      selected="true" text="Allow passing creator" VBox.vgrow="ALWAYS"/>
            <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                   text="Creator will be able to pass his role to other users" VBox.vgrow="ALWAYS">
               <font>
                  <Font name="System Italic" size="12.0"/>
               </font>
            </Label>
         </children>
      </VBox>
      <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="5.0" VBox.vgrow="ALWAYS">
         <children>
            <CheckBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                      selected="true" text="Allow stealing creator" VBox.vgrow="ALWAYS"/>
            <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                   text="Everyone will be able to become a creator at any time" VBox.vgrow="ALWAYS"/>
         </children>
      </VBox>
      <VBox layoutX="50.0" layoutY="253.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
            spacing="5.0" VBox.vgrow="ALWAYS">
         <children>
            <CheckBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                      selected="true" text="Pass creator when leaving" VBox.vgrow="ALWAYS"/>
            <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                   text="When creator leaves, his role will be passed to next player" VBox.vgrow="ALWAYS"/>
         </children>
      </VBox>
      <Button fx:id="createSessionButton" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
              mnemonicParsing="false" onAction="#handleCreateSessionButtonClicked" text="Create new session"
              VBox.vgrow="ALWAYS"/>
   </children>
</VBox>
